{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/about-me/about-me.css') }}">
{% endblock %}

{% block body %}
    <div class="ui segments">
        <div class="ui red placeholder segment">
            <h2 class="ui centered header">
                <img class="ui image" src="{{ asset('images/me.png') }}" alt="Me">
                <div class="content">
                    About Me
                </div>
            </h2>
            <div class="paragraph">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
            <div class="paragraph">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
        </div>
        <div class="ui secondary segment">
            <h2 class="ui centered header">
                <img class="ui image" src="{{ asset('images/skills.png') }}" alt="My skills">
                <div class="content">
                    My skills
                </div>
            </h2>
            <div class="ui equal width centered grid" id="skills">
                <div class="column">
                    <h2 class="ui center aligned header">Web</h2>
                    <div class="ui tiny images">
                        <img class="ui image" data-position="top center" data-content="HTML 5" src="{{ asset('images/html.svg') }}">
                        <img class="ui image" data-position="top center" data-content="CSS 3" src="{{ asset('images/css.svg') }}">
                        <img class="ui image" data-position="top center" data-content="Javascript" src="{{ asset('images/js.svg') }}">
                        <img class="ui image" data-position="top center" data-content="PHP" src="{{ asset('images/php.svg') }}">
                    </div>
                </div>
                <div class="borders column">
                    <h2 class="ui center aligned header">At School</h2>
                    <div class="ui tiny images">
                        <img class="ui image" data-position="top center" data-content="Python" src="{{ asset('images/python.svg') }}">
                        <img class="ui image" data-position="top center" data-content="C" src="{{ asset('images/c.png') }}">
                        <img class="ui image" data-position="top center" data-content="C++" src="{{ asset('images/c++.png') }}">
                    </div>
                </div>
                <div class="column">
                    <h2 class="ui center aligned header">Others</h2>
                    <div class="ui tiny images">
                        <img class="ui image" data-position="top center" data-content="C# .NET" src="{{ asset('images/CSharp.svg') }}">
                        <img class="ui image" data-position="top center" data-content="Unity Game Engine" src="{{ asset('images/unity.svg') }}">
                    </div>
                </div>
            </div>
        </div>
        <div class="ui segment">
            <h2 class="ui centered header">
                <img class="ui image" src="{{ asset('images/xp.svg') }}" alt="Me">
                <div class="content">
                    My Experience
                </div>
            </h2>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/about-me/about-me.js') }}"></script>
{% endblock %}